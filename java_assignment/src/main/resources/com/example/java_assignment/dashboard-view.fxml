<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.java_assignment.controller.DashboardController">
   <children>
      <Label text="Banking System Dashboard" style="-fx-font-size: 20; -fx-font-weight: bold;">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
      </Label>
      <TabPane>
        <tabs>
          <Tab text="Customer Management">
               <content>
                  <VBox spacing="10">
                     <HBox spacing="10">
                        <Button fx:id="addCustomerButton" mnemonicParsing="false" onAction="#handleAddCustomer" text="Add New Customer" />
                     </HBox>
                     <ListView fx:id="customersListView" />
                  </VBox>
               </content>
          </Tab>
          <Tab text="Account Management">
               <content>
                  <VBox spacing="10">
                     <HBox spacing="10">
                        <Button fx:id="openAccountButton" mnemonicParsing="false" onAction="#handleOpenAccount" text="Open New Account" />
                     </HBox>
                     <ListView fx:id="accountsListView" />
                  </VBox>
               </content>
          </Tab>
          <Tab text="Transactions">
               <content>
                  <VBox spacing="10">
                     <HBox spacing="10">
                        <Button fx:id="depositButton" mnemonicParsing="false" onAction="#handleDeposit" text="Deposit" />
                        <Button fx:id="withdrawButton" mnemonicParsing="false" onAction="#handleWithdraw" text="Withdraw" />
                     </HBox>
                     <TextArea fx:id="transactionArea" editable="false" />
                  </VBox>
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>